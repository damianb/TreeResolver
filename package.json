{
  "name": "treeresolver",
  "version": "1.0.2",
  "description": "TreeResolver is a dependency resolution library, made to resolve dependencies optimally whilst detecting unresolvable or circular dependencies.",
  "license": "MIT",
  "author": "Damian Bushong <katana@odios.us>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/damianb/TreeResolver.git"
  },
  "keywords": [
    "dependency",
    "resolution",
    "TreeResolver",
    "DepResolver"
  ],
  "bugs": {
    "url": "https://github.com/damianb/TreeResolver/issues"
  },
  "homepage": "https://github.com/damianb/TreeResolver#readme",
  "scripts": {
    "docs": "typedoc --out docs/ --mode file ./src/ --theme minimal",
    "build": "tsc -p ./tsconfig.json",
    "clean": "rimraf ./dist/* && mkdirp ./dist",
    "style": "tslint ./src/*.ts -p ./tsconfig.json",
    "unit": "mocha --require ts-node/register ./tests/*.spec.ts",
    "test": "npm run clean && npm run build && npm run style && npm run unit",
    "todo": "fixme --path ./ src/**/*.ts src/*.ts --skip note",
    "prepublishOnly": "npm run clean && npm run docs && npm run build && npm run style && npm run unit"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "@types/node": "10.0.3",
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "fixme": "^0.5.0",
    "mkdirp": "^0.5.1",
    "mocha": "^5.1.1",
    "rimraf": "^2.6.2",
    "ts-node": "^6.0.2",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.12.0",
    "typescript": "^2.8.3"
  }
}
