{
  "name": "treeresolver",
  "version": "2.1.0",
  "description": "TreeResolver is a dependency resolution library, made to resolve dependencies optimally whilst detecting unresolvable or circular dependencies.",
  "license": "MIT",
  "author": "Damian Bushong <katana@odios.us>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/damianb/TreeResolver.git"
  },
  "keywords": [
    "dependency",
    "resolution",
    "TreeResolver",
    "DepResolver"
  ],
  "bugs": {
    "url": "https://github.com/damianb/TreeResolver/issues"
  },
  "homepage": "https://github.com/damianb/TreeResolver#readme",
  "scripts": {
    "docs": "typedoc --out docs/ --mode file ./src/ --theme minimal",
    "build": "tsc -p ./tsconfig.json",
    "clean": "rimraf ./dist/* && mkdirp ./dist",
    "style": "tslint ./src/*.ts -p ./tsconfig.json",
    "unit": "cross-env NODE_ENV=test nyc mocha  --opts tests/mocha.opts --reporter-options configFile=tests/mocha.json ./tests/*.spec.ts",
    "test": "yarn run clean && yarn run build && yarn run style && yarn run unit",
    "todo": "fixme --path ./ src/**/*.ts src/*.ts --skip note",
    "prepublishOnly": "yarn run clean && yarn run docs && yarn run build && yarn run style && yarn run unit"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.1",
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "fixme": "^0.5.0",
    "mkdirp": "^0.5.1",
    "mocha": "^6.2.1",
    "mocha-junit-reporter": "^1.23.1",
    "mocha-multi-reporters": "^1.1.7",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "ts-node": "^7",
    "tslint": "^5.20.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "source-map-support": "^0.5.10"
  }
}
