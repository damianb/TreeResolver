{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"declarationDir": "./dist/",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "ES2017"
	},
	"include": [
		"./src/*.ts",
		"./src/**/*.ts"
	]
}
